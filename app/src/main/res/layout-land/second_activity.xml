<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    tools:context="com.zkt.konradziarko.medapp.MainActivity">

    <fragment
        android:id="@+id/content"

        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        class="com.zkt.konradziarko.medapp.ContentFragment"
        tools:layout="@layout/fragment_content_panel" />

    <fragment
        android:id="@+id/decision"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        class="com.zkt.konradziarko.medapp.DecisionFragment"
        tools:layout="@layout/fragment_decision_panel" />
</LinearLayout>