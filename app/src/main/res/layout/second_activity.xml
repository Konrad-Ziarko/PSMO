<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/activity_main"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="com.example.psmo.medteam1.Secondary_activity"
    android:weightSum="10"
    >


    <fragment
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        class="com.example.psmo.medteam1.ContentFragment"
        tools:layout="@layout/fragment_content_panel" />

    <Button
        android:text="Start algorytmu"
        android:background="@drawable/buttonshape"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/button"
        android:textColor="#FFFFFFFF"
        android:textSize="30sp"
        android:shadowColor="#ff204db7"
        android:shadowDx="3"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:layout_weight="1"
        android:layout_marginBottom="10dp" />

</LinearLayout>
