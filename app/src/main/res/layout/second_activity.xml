<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_main"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="com.example.przem.contr1.Secondary_activity">

    <fragment
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        class="com.example.przem.contr1.ContentFragment"
        tools:layout="@layout/fragment_content_panel" />
    <fragment
        android:id="@+id/decision"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        class="com.example.przem.contr1.DecisionFragment"
        tools:layout="@layout/fragment_decision_panel" />


</LinearLayout>
